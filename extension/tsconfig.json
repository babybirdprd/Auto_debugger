{
	"compilerOptions": {
		"target": "es2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
		"jsx": "react",
		"outDir": "out",
		"lib": ["es2015", "dom", "es6", "dom.iterable", "scripthost"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,   /* enable all strict type-checking options */
		/* Additional Checks */
		// "noImplicitReturns": true, /* Report error when not all code paths in function return a value. */
		// "noFallthroughCasesInSwitch": true, /* Report errors for fallthrough cases in switch statement. */
		// "noUnusedParameters": true,  /* Report errors on unused parameters. */
		"baseUrl": ".",
		"paths": {
		//   "@/components/*": ["./src/view/app/components/*"],
		//   "@/components/ui/*": ["./src/view/app/components/ui/*"],
		//   "@/lib/*": ["./src/view/app/lib/*"],
		  "@/*": ["./src/view/app/*"]
		}
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test",
		"**/view/app/index.css",
		"**/view/app/index.tsx",
		"**/view/app/tsconfig.json",
		"**/view/app/config.tsx"
	]
}
